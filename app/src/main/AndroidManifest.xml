<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.madgroupproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Fitness Tracker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Home Activity (启动页面) -->
        <activity
            android:name=".homepage.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- SettingMainActivity -->
        <activity
            android:name=".settingpage.SettingMainActivity"
            android:exported="false" /> <!-- Streak Activity -->
        <activity
            android:name=".streakpage.StreakActivity"
            android:exported="false" /> <!-- Goal Activity -->
        <activity
            android:name=".goalpage.GoalActivity"
            android:exported="false" />
        <activity
            android:name=".goalpage.CreateGoalActivity"
            android:exported="false" /> <!-- Stats Activity -->
        <activity
            android:name=".statspage.StatsActivity"
            android:exported="false" /> <!-- Game Level MainActivity -->
        <activity
            android:name=".gamelevelspage.MainActivity"
            android:exported="false" /> <!-- Game Level Detail Activity -->
        <activity
            android:name=".gamelevelspage.LevelDetailActivity"
            android:exported="false" /> <!-- Change Goal Activity -->
        <activity
            android:name=".streakpage.ChangeStreakActivity"
            android:exported="false"
            android:parentActivityName=".streakpage.StreakActivity" /> <!-- Day Detail Activity -->
        <activity
            android:name=".streakpage.DayDetailActivity"
            android:exported="false"
            android:parentActivityName=".streakpage.StreakActivity" /> <!-- Best Streak Detail Activity -->
        <activity
            android:name=".streakpage.BestStreakDetailActivity"
            android:exported="false"
            android:parentActivityName=".streakpage.StreakActivity" />
    </application>

</manifest>