<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (Light Mode) -->
    <style name="Base.Theme.MAD" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:fontFamily">@font/jost</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/accent</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/card_bg</item>
        <item name="colorSurfaceVariant">@color/button_bg</item>
        <item name="colorSurface">@color/buttonBackgroundColorTint</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status and navigation bars -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

    </style>

    <!-- Main application theme -->
    <style name="Theme.MAD" parent="Base.Theme.MAD" />

    <!-- AppTheme  -->
    <style name="AppTheme" parent="Base.Theme.MAD" />

    <!-- Make the frame circle -->
    <style name="CircleImageStyle" parent="">
        <item name="cornerSize">50%</item>
    </style>



</resources>