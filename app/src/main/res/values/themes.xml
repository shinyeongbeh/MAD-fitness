<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (Light Mode) -->
    <style name="Base.Theme.MAD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 全局字体设置为 Coiny -->
        <item name="android:fontFamily">@font/coiny</item>

        <!-- Material3 颜色属性 -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#DCEFC5</item>
        <item name="colorOnPrimaryContainer">#000000</item>

        <!-- 背景色 -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">#D6DAC8</item>
        <item name="colorOnSurface">#000000</item>

        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">#D6DAC8</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 导航栏颜色 -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#666666</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.MAD" parent="Base.Theme.MAD" />

    <!-- AppTheme 别名 -->
    <style name="AppTheme" parent="Base.Theme.MAD" />

</resources>