<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Calendar Header Text Style -->
    <style name="CalendarHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/coiny</item>
    </style>

    <!-- Base Application Theme - 去掉 ActionBar -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#DCEFC5</item>
        <item name="android:windowBackground">#D6DAC8</item>
        <item name="android:statusBarColor">#D6DAC8</item>
    </style>
</resources>