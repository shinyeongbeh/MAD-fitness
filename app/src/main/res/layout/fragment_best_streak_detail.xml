<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#D6DAC8"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Streak Details"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

            <!-- Trophy Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/streak_ic_trophy"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"/>

            <!-- Streak Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#DCEFC5"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Streak å¤©æ•° -->
                    <TextView
                        android:id="@+id/tvLongestStreakCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30 Days"
                        android:textColor="#000000"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/coiny"
                        android:gravity="center"
                        android:layout_marginBottom="12dp"/>

                    <!-- Streak æ—¥æœŸ -->
                    <TextView
                        android:id="@+id/tvLongestStreakDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="January 1 - 30, 2025"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:fontFamily="@font/coiny"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#9CB1AA"
                        android:layout_marginBottom="16dp"/>

                    <!-- Achievement Summary æ ‡é¢˜ -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Achievement Summary"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/coiny"
                        android:layout_marginBottom="12dp"/>

                    <!-- âœ… åŠ¨æ€ Achievement Summary -->
                    <TextView
                        android:id="@+id/tvAchSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/coiny"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Motivation Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#9CB1AA"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’ª Keep Going!"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/coiny"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Great things are not done by impulse, but by a series of small things brought together!"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/coiny"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Back Button -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="16dp"
                android:textAllCaps="false"
                android:layout_marginBottom="24dp"/>

            <!-- åº•éƒ¨ç©ºç™½åŒºåŸŸï¼Œç¡®ä¿å†…å®¹ä¸è¢«å¯¼èˆªæ é®æŒ¡ -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>