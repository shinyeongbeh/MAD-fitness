<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fitness.settingpage.SettingMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- APP BAR / TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:background="@color/buttonBackgroundColorTint"
            app:titleTextColor="@android:color/white" />

        <!-- Fragment Container - 占据剩余空间 -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/NFMainSetting"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation_setting_page"/>

        <!-- Include Bottom Navigation -->
        <include layout="@layout/layout_bottom_navigation" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




