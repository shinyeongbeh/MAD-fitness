<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:paddingBottom="24dp">

        <!-- All views are now chained vertically. THIS WILL SCROLL. -->

        <TextView
            android:id="@+id/TV_Reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Reminder"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_Notification_DG"
            android:layout_width="224dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonBackgroundColorTint"
            android:text="    Daily Goals"
            android:textAlignment="textStart"
            android:textColor="#020000"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="@color/iconTintPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TV_Reminder" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/button_Notification_DG"
            app:layout_constraintStart_toStartOf="@+id/button_Notification_DG"
            app:layout_constraintTop_toBottomOf="@+id/button_Notification_DG">

            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Notification bar" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="LockScreen" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Pin" tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <Button
            android:id="@+id/button_Notification_Storage"
            android:layout_width="224dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonBackgroundColorTint"
            android:text="    Streak Alerts"
            android:textAlignment="textStart"
            android:textColor="#020000"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="@color/iconTintPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/button_Notification_Storage"
            app:layout_constraintStart_toStartOf="@+id/button_Notification_Storage"
            app:layout_constraintTop_toBottomOf="@+id/button_Notification_Storage">

            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Notification bar" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="LockScreen" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Pin" tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <Button
            android:id="@+id/button_Notification_HT"
            android:layout_width="224dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonBackgroundColorTint"
            android:text="    Health Tips"
            android:textAlignment="textStart"
            android:textColor="#020000"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="@color/iconTintPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/button_Notification_HT"
            app:layout_constraintStart_toStartOf="@+id/button_Notification_HT"
            app:layout_constraintTop_toBottomOf="@+id/button_Notification_HT">

            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Notification bar" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="LockScreen" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Pin" tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <Button
            android:id="@+id/button_Notification_SMA"
            android:layout_width="224dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonBackgroundColorTint"
            android:text="Step Milestone Alerts"
            android:textAlignment="textStart"
            android:textColor="#020000"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="@color/iconTintPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/button_Notification_SMA"
            app:layout_constraintStart_toStartOf="@+id/button_Notification_SMA"
            app:layout_constraintTop_toBottomOf="@+id/button_Notification_SMA">

            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Notification bar" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="LockScreen" tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch android:layout_width="match_parent" android:layout_height="48dp" android:text="Pin" tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>