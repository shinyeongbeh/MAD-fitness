<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settingpage.App">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/android:windowBackground"
        android:backgroundTint="?attr/android:windowBackground">

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="120dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="81dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_App_Feedback"
            app:layout_constraintVertical_bias="0.004">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>

        <Button
            android:id="@+id/button_App_Feedback"
            android:layout_width="224dp"
            android:layout_height="54dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="94dp"
            android:backgroundTint="?attr/colorSurface"
            android:text="       Feedback"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnSurface"
            android:textColorLink="#BC8787"
            app:icon="@drawable/baseline_feed_24"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_App_AppVersion"
            app:layout_constraintVertical_bias="0.194" />

        <Button
            android:id="@+id/button_App_AppVersion"
            android:layout_width="224dp"
            android:layout_height="54dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="94dp"
            android:backgroundTint="?attr/colorSurface"
            android:text="      AppVersion"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnSurface"
            android:textColorLink="#BC8787"
            app:icon="@drawable/ic_launcher_foreground"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TV_app"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/TV_app"
            android:layout_width="130dp"
            android:layout_height="59dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="94dp"
            android:text="App"
            android:textColor="?attr/colorOnSurface"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/button_App_SP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="94dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="111dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/button_App_Feedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_App_AppVersion">

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version : 5.1.0"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSurface" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/jost"
                android:text="Auto - update"
                android:textAlignment="textStart"
                android:textColor="?attr/colorOnSurface"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>