<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6DAC8">

    <!-- 可滚动的内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Current Streak Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CURRENT STREAK: 4 DAYS"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

            <!-- Today's Progress Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#DCEFC5"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Today label with chain icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/streak_ic_link"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today: Feb 9"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/coiny"/>
                    </LinearLayout>

                    <!-- Steps progress with gray circle check -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 灰色圆底白勾图标 -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/streak_ic_check_gray_circle"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvTodaySteps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steps: 760\1000"
                            android:textColor="#999999"
                            android:textSize="16sp"
                            android:fontFamily="@font/coiny"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Calendar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Month Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="February"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/coiny"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <!-- Calendar Grid -->
                    <GridLayout
                        android:id="@+id/calendarGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="6">

                        <!-- Day headers -->
                        <TextView style="@style/CalendarHeaderText" android:text="S"/>
                        <TextView style="@style/CalendarHeaderText" android:text="M"/>
                        <TextView style="@style/CalendarHeaderText" android:text="T"/>
                        <TextView style="@style/CalendarHeaderText" android:text="W"/>
                        <TextView style="@style/CalendarHeaderText" android:text="T"/>
                        <TextView style="@style/CalendarHeaderText" android:text="F"/>
                        <TextView style="@style/CalendarHeaderText" android:text="S"/>

                        <!-- Calendar days will be added programmatically -->
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Best Streak Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBestStreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#DCEFC5"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Green circle with white check -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/streak_ic_check_green_circle"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Best Streak"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/coiny"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jan 1 - 30"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:fontFamily="@font/coiny"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 days"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/coiny"/>
                    </LinearLayout>

                    <!-- Trophy icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/streak_ic_trophy"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Change Streak Goal Button -->
            <Button
                android:id="@+id/btnChangeStreakGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Streak Goal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="16dp"
                android:textAllCaps="false"
                android:layout_marginBottom="24dp"/>

            <!-- 底部空白 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <include layout="@layout/layout_bottom_navigation" />

</LinearLayout>
