<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_level_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6DAC8"
    tools:context=".ui.gamelevelspage.GameLevelMainActivity">

    <!-- 可滚动的内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 2"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 3"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 4"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 5"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 6"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 7"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#DCEFC5"
                android:fontFamily="@font/coiny"
                android:text="Level 8"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <!-- 底部空白区域，确保最后一个按钮不被导航栏遮挡 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <include layout="@layout/layout_bottom_navigation" />

</LinearLayout>