<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settingpage.Account">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/android:windowBackground"
        android:backgroundTint="?attr/android:windowBackground">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="284dp"
            android:layout_height="516dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="108dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_Account_Profile"
            app:layout_constraintVertical_bias="0.0">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Frame overlay -->

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:focusable="true"
                    app:shapeAppearanceOverlay="@style/CircleImageStyle"
                    android:src="@drawable/puppiescouk_053399600_1663317083_2412" />

                <ImageView
                    android:id="@+id/imgFrame"
                    android:layout_width="174dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frame_1" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Username:"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Username"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Puppy"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="186dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Email:"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="puppy@gmail.com"
                    android:textAlignment="textStart"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Phone No:"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="011234589"
                    android:textAlignment="textStart"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Age:"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="20"
                    android:textAlignment="textStart"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="303dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Weight (kg):"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Weight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text=" 40 "
                    android:textAlignment="textStart"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="303dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Height (cm):"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Height"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="160"
                    android:textAlignment="textStart"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_Account_Edit"
            android:layout_width="123dp"
            android:layout_height="50dp"
            android:layout_marginStart="279dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="?attr/colorSurface"
            android:text="Edit"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnSurface"
            android:textColorLink="#BC8787"
            android:textSize="12sp"
            app:icon="@drawable/baseline_edit_24"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/button_Account_Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_Account_Profile"
            android:layout_width="224dp"
            android:layout_height="54dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="94dp"
            android:backgroundTint="?attr/colorSurface"
            android:text="      Profile"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnSurface"
            android:textColorLink="#BC8787"
            app:icon="@drawable/outline_emoji_people_24"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>