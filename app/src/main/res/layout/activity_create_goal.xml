<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6DAC8">

    <!-- 可滚动的内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Goal"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"/>

            <!-- Goal Name Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Name"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:layout_marginBottom="12dp"/>

            <!-- Goal Name Input -->
            <EditText
                android:id="@+id/etGoalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g: Daily 10k Steps"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/coiny"
                android:background="@drawable/bg_edit_text"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Label"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:layout_marginBottom="12dp"/>

            <!-- Label Selection -->
            <Spinner
                android:id="@+id/spinnerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Set Reminder Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Reminder"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:layout_marginBottom="12dp"/>

            <!-- Time Picker Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#9CB1AA"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvReminderTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="18:30"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/coiny"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Goal Button -->
            <Button
                android:id="@+id/btnSaveGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Goal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="20dp"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"/>

            <!-- Delete Goal Button -->
            <Button
                android:id="@+id/btnDeleteGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Goal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="20dp"
                android:textAllCaps="false"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- Back Button -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="20dp"
                android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>

    <!-- Include Bottom Navigation -->
    <include layout="@layout/layout_bottom_navigation" />
</LinearLayout>