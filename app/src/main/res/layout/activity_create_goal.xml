<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6DAC8">

    <!-- 可滚动的内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Goal"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

            <!-- Goal Name Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:layout_marginBottom="12dp"/>

            <!-- Goal Name Input -->
            <EditText
                android:id="@+id/etGoalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter goal name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/coiny"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Label"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:layout_marginBottom="12dp"/>

            <!-- Label Spinner -->
            <Spinner
                android:id="@+id/spinnerLabel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Set Reminder -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Reminder"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:layout_marginBottom="12dp"/>

            <!-- Time Picker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#9CB1AA"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvReminderTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="18:30"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/coiny"
                    android:clickable="true"
                    android:focusable="true"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color"/>
            </LinearLayout>

            <!-- Save Goal Button -->
            <Button
                android:id="@+id/btnSaveGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Goal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="16dp"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"/>

            <!-- Delete Goal Button -->
            <Button
                android:id="@+id/btnDeleteGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Goal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="16dp"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"/>

            <!-- Back Button -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/coiny"
                android:backgroundTint="#4CAF50"
                android:padding="16dp"
                android:textAllCaps="false"
                android:layout_marginBottom="24dp"/>

            <!-- 底部空白区域，确保内容不被导航栏遮挡 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <include layout="@layout/layout_bottom_navigation" />

</LinearLayout>